<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="14dp">

    <TextView
        android:id="@+id/modTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Module"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/modBadge"
        app:layout_constraintHorizontal_bias="0" />

    <TextView
        android:id="@+id/modBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="24dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="0"
        android:textSize="12sp"
        android:gravity="center"
        android:background="@android:drawable/btn_default_small"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/modTitle"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/modSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Enabled"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/modTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/modAction" />

    <Button
        android:id="@+id/modAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open"
        app:layout_constraintTop_toBottomOf="@id/modTitle"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>